        x_tempname_zip CLOB; 
        l_base64enconde  CLOB; 
		 
        l_file_exists BOOLEAN; 
        l_file_len    NUMBER; 
        l_blocksize   BINARY_INTEGER; 
        l_all_metadatas        CLOB; 
