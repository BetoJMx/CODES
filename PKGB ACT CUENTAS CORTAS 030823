                L_PERSON_NUMBER             := NULL;
                L_FULL_NAME                 := NULL;
                L_PERSON_ID                 := NULL;
                L_NOMBRE_METODO_PAGO        := NULL;
                L_BANK_NUMBER               := NULL;
                L_EFFECTIVE_START_DATE      := NULL;
                L_NUMERO_TARJERA            := NULL;
                l_curp                      := NULL;
                l_full_name                 := NULL;
