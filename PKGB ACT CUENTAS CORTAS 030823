                                    l_log := l_log ||'Actualiza Cuenta del Empleado: |'||L_PERSON_NUMBER||' | '||' Nombre: |' ||l_full_name||' | CUENTA |'||v_num_cuenta ||'|' ||' Fecha aplicación: |' ||L_EFFECTIVE_START_DATE ||' | Empleado: | '||CASE WHEN l_tipo_empleado_activo_baja IS NULL THEN 'ACTIVO' ELSE 'BAJA | '|| l_tipo_empleado_activo_baja END||CHR (10);
                                
