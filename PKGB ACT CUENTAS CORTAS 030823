                            v_error_no_update :=TRIM (REPLACE (SUBSTR (v_lines_arr (i), 234, 55), ' ', ''));
                            v_error_no_update_v1 := TRIM(SUBSTR (v_lines_arr (i), 234, 55));
                            v_num_cuenta := TRIM (SUBSTR (v_lines_arr (i), 190, 10));
                              
                                          
