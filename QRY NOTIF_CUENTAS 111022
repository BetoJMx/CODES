--QRY NOTIF_CUENTAS 111022
SELECT  UPPER(HLA.LOCATION_NAME)    AS NOMBRE_UNIDAD,
        HLA.LOCATION_ID             AS ID_UNIDAD,
        HOIF.ORG_INFORMATION1       AS CODIGO_UNIDAD

FROM    PER_ALL_PEOPLE_F                PAPF,
        PER_ALL_ASSIGNMENTS_F           PAAF,
        HR_LOCATIONS_ALL                HLA,
        HR_ORGANIZATION_INFORMATION_F   HOIF

WHERE   PAPF.PERSON_NUMBER                  = TRIM(:ESTAFETA)
        AND PAPF.PERSON_ID                  = PAAF.PERSON_ID
        AND PAAF.ASSIGNMENT_TYPE            = 'E'
        AND PAAF.EFFECTIVE_LATEST_CHANGE    = 'Y'
        AND PAAF.ASSIGNMENT_NUMBER          = TRIM(:ASIGANCION)
        AND HLA.LOCATION_ID                 = PAAF.LOCATION_ID
        AND HLA.ACTIVE_STATUS               = 'A'
        AND PAAF.ORGANIZATION_ID            = HOIF.ORGANIZATION_ID (+)
        AND HOIF.ORG_INFORMATION_CONTEXT(+) = 'PER_GL_COST_CENTER_INFO'
        --+ DATES
        AND SYSDATE BETWEEN PAAF.EFFECTIVE_START_DATE
                    AND PAAF.EFFECTIVE_END_DATE
        AND SYSDATE BETWEEN PAPF.EFFECTIVE_START_DATE
                    AND PAPF.EFFECTIVE_END_DATE
        AND SYSDATE BETWEEN HOIF.EFFECTIVE_START_DATE (+)
                    AND HOIF.EFFECTIVE_END_DATE (+)
