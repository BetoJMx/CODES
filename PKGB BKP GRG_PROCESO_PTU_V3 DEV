                    -- END LOOP;
                    -- -- output('METADATA|ElementEntry|CreatorType|EffectiveStartDate|EffectiveEndDate|ElementName|LegislativeDataGroupName|EntryType|AssignmentNumber|MultipleEntryCount'|| CHR (10));
                    -- -- output(l_all_metadatas_h2|| CHR (10));
